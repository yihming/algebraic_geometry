proc getTerms(poly f) {
  if (f == 0) {
    return (list());
  }

  int ring_flag = 0;
  if (nameof(basering) != "@RP") {
    def BR = basering;
    setring @RP;
    def f = imap(BR, f);
    ring_flag = 1;
  }

  list term_list;

  while (f != 0) {
    term_list = insert(term_list, leadmonom(f), size(term_list));
    f = f - lead(f);
  }

  if (ring_flag) {
    setring BR;
    def term_list = imap(@RP, term_list);
  }

  return (term_list);
}

proc isDivisible(list terms_f, poly t) {
  //basering is @RP.
  if (size(terms_f) == 0 || t == 0) {
    return (0, -1);
  }

  int i;
  for (i = size(terms_f); i >= 1; i--) {
    if (terms_f[i] / t != 0) {
      return (1, i);
    }
  }

  return (0, -1);
}

proc reduceOneStep(poly f, ideal G) {
  if (size(G) == 0 || f == 0) {
    return (f);
  }
  
  int ring_flag = 0;
  if (nameof(basering) != "@RP") {
    def BR = basering;
    setring @RP;
    def f = imap(BR, f);
    def G = imap(BR, G);
    ring_flag = 1;
  }

  G = sortSetAsce(G);
  int i;

  list terms_f = getTerms(f);
  int term_idx, divisible_flag;
  
  for (i = 1; i <= size(G); i++) {
    (divisible_flag, term_idx) = isDivisible(terms_f, leadmonom(G[i]));
    if (divisible_flag) {
      //fprintf(special_out, "%s is reduced by %s * %s.", showParamPoly(f), showParamPoly((leadcoef(f[term_idx]) / leadcoef(G[i])) * (leadmonom(f[term_idx]) / leadmonom(G[i]))), showParamPoly(G[i]));
      f = f - (leadcoef(f[term_idx]) / leadcoef(G[i])) * (leadmonom(f[term_idx]) / leadmonom(G[i])) * G[i];
      break;
    }
  }

  if (ring_flag) {
    setring BR;
    def f = imap(@RP, f);
  }
  
  return (f);
}

proc mergeList(list L1, list L2) {
  if (size(L1) == 0) {
    return (L2);
  }

  if (size(L2) == 0) {
    return (L1);
  }

  int i;
  for (i = 1; i <= size(L2); i++) {
    if (!listContains(L1, L2[i])) {
      L1 = insert(L1, L2[i], size(L1));
    }
  }

  return (L1);
}

proc getMCGBNew1(ideal E, ideal N, ideal F, int choice_flag, int opt_flag) {
  ideal G;
  list modcgs;

  (G, modcgs) = cgb_mod(F, E, idealToList(N), choice_flag, out);

  if (size(G) == 0 || size(modcgs) == 0) {
    return (list());
  }

  set_global_rings_mcgb();
  set_global_objects();

  G = purifyCGB(G);
  G = sortSetDesc(G);
  def CGB = G;
  exportto(Top, CGB);

  
  int ring_flag = 0;
  if (nameof(basering) != "@RP") {
    def BR = basering;
    setring @RP;
    def G = imap(BR, G);
    def modcgs = imap(BR, modcgs);
    def CGB = G;
    exportto(Top, CGB);
    ring_flag = 1;
  }
  

  list M;
  int i, j;

  for (i = 1; i <= size(G); i++) {
    M = insert(M, G[i], size(M));
  }

  for (i = 1; i <= size(G); i++) {
    poly cur_g = G[i];
    if (defined(debug_mode) && debug_mode == 1) {
      fprintf(out, "Now check g_%s = %s:", string(i), showParamPoly(cur_g));
    }
    int is_essential;
    list BL;
    list modcgs_new;
    list M_new;

    ideal MRem_ideal = listToIdeal(deletePolyFromList(M, cur_g));

    (is_essential, BL) = checkEssential(cur_g, M, modcgs, opt_flag);
    if (!is_essential) {
      // Remove cur_g from M.
      modcgs = updateCGS(modcgs, cur_g, BL);
      M = deletePolyFromList(M, cur_g);
    } else {
      // Perform simplification.
      poly g_red = reduce(cur_g, MRem_ideal);
      g_red = monic(g_red);
      
      if (g_red != cur_g) {
	M_new = insert(M, g_red, size(M));
	(is_essential, BL) = checkEssential(cur_g, M_new, modcgs, opt_flag);
	if (!is_essential) {
	  modcgs = updateCGS(modcgs, cur_g, BL);
	  M = substPolyInList(M, cur_g, g_red);
	  //printf("Substitute!");
	  if (defined(debug_mode) && debug_mode == 1) {
	    fprintf(out, "Substitute %s for %s in M.", showParamPoly(g_red), showParamPoly(cur_g));
	  }
	} else {       
	  // One-Step reduction until essential.
	  //fprintf(special_out, "+++++++++" + newline + "Start one-step reduction!");
	  int terminate_flag = 0;
	  poly g_old = cur_g;
	  poly g_new, g_final;
	  list BL_old, BL_new, BL_final;
	  while (!terminate_flag) {
	    g_new = reduceOneStep(g_old, MRem_ideal);
	    g_new = monic(g_new);
	    if (g_new == g_old) {
	      //fprintf(special_out, "%s is already normal form.", showParamPoly(g_new));
	      BL_final = BL_old;
	      g_final = g_old;
	      break;
	    }
	    //fprintf(special_out, "%s is reduced to %s", showParamPoly(g_old), showParamPoly(g_new));
	    M_new = insert(M, g_new, size(M));
	    (is_essential, BL_new) = checkEssential(cur_g, M_new, modcgs, opt_flag);
	    if (is_essential) {
	      //fprintf(special_out, "%s is not covered, stop." + newline, showParamPoly(g_old));
	      terminate_flag = 1;
	      BL_final = BL_old;
	      g_final = g_old;
	    } else {
	      //fprintf(special_out, "%s is covered, continue." + newline, showParamPoly(g_old));
	      BL_old = BL_new;
	      g_old = g_new;
	    }
	  }
	  if (g_final != cur_g) {
	    modcgs = updateCGS(modcgs, cur_g, BL_final);
	    M = substPolyInList(M, cur_g, g_final);
	    //fprintf(special_out, "Substitute %s for %s in M.", showParamPoly(g_final), showParamPoly(cur_g));
	  }
	}
      }
    } // End if.

    
  } // End for.

  ideal M_ideal;
  for (i = 1; i <= size(M); i++) {
    M_ideal = insertPolyToIdeal(M_ideal, M[i]);
  }

  def MCGB = M_ideal;
  def cgs_mcgb = modcgs;
  
  // Switch back to BR.
  if (ring_flag) {
    setring BR;
    def MCGB = imap(@RP, MCGB);
    def cgs_mcgb = imap(@RP, cgs_mcgb);
  }

  return (MCGB, cgs_mcgb);
}

