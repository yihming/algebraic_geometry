  }


  if (split_flag) {
    ideal N_comp_factors = getFactorIdeal(N_comp);
  
    poly factor_used = 1;
    for (i = 1; i <= size(N_comp_factors); i++) {
      ideal E_next = paramIdealInsert(E, N_comp_factors[i]);
      list N_next = insert(N, factor_used, size(N));
      int local_simpl_flag = 1;
