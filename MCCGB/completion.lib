      (G, pairs, local_simpl_flag) = mcgbGenRec(G, pairs, cur_pair, E_next, N_next, E_given, N_given, local_simpl_flag);
      if (local_simpl_flag == 0) {
	simpl_flag = 0;
      }
    }
    return (G, pairs, simpl_flag);
  } else {
  
